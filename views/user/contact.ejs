  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg" style="position: sticky; top: 0; z-index: 999;background-color: #dadada;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="image/logo.jpg" alt="" /></a>
        <button
          class="navbar-toggler shadow-none border-0"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav" id="ul">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/all">Portfolio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact" style="background-color: black !important; color: white !important;">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- navbar -->
  </body>
  <section id="home">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4 my_i myimg mt-5">
          <img src="<%=home_data[0].image1%>" alt="" class="mt-4"/>
        </div>
        <div class="col-md-4 my_i myimg2">
          <img src="image/nagu2.jpg" alt="" />
        </div>

        <div class="col-md-7 my_about pb-3" data-aos="fade-up">
            <h3 class="about_me">GET IN TOUCH</h3>
          <hr>
          <div class="row ps-3 pe-3">
            <div class="mt-2 me-3 col-md-4 text-center add pt-2 pb-1">
                <span><i class="fa-solid fa-location-dot"></i></span><br>
                <p><%=basic_info[0].address%></p>
            </div>
            <div class="mt-2 me-3 col-md-3 text-center add pt-2 pb-1">
                <span><i class="fa-solid fa-envelope"></i></span><br>
                <p><%=basic_info[0].email%></p>
            </div>
            <div class="mt-2 me-3 col-md-4 text-center add pt-2 pb-1">
                <span><i class="fa-solid fa-phone-volume"></i></span><br>
                <p>+91 <%=basic_info[0].mobile%></p>
            </div>
          </div>
      <div class="row mt-5">
        <div class="col-md-6 mt-2">
            <form action="/save_contact_form" method="post">
                <div class="col-md-12">
                    <input type="text" class="input_control ps-2" name="Name"  placeholder="Name">
                </div>
                <div class="col-md-12 mt-4">
                    <input type="text" class="input_control ps-2" name="Email" placeholder="Email">
                </div>
                <div class="col-md-12 mt-4">
                  <input type="text" class="input_control ps-2" name="subject" placeholder="subject">
              </div>
                <div class="col-md-12 mt-4">
                    <input type="text" class="input_msg ps-2" name="Message"  placeholder="Message">
                </div>
                <button class="submit_btn">SEND MESSAGE</button>
            </form>
        </div>
        <div class="col-md-6 mt-2">
            <iframe src="<%=basic_info[0].map%>" width="350" height="370" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>

      </div>
    </div>

    </div>
  </section>
  <div class="iconss">
    <ul type="none">
      <li><a href="<%=social[0].insta_link%>"><i class="icoo fa-brands fa-instagram"></i></li></a>
      <li><a href="<%=social[0].whatsapp_link%>"><i class="icoo fa-brands fa-whatsapp"></i></li></a>
      <li><a href="<%=social[0].linkdin_link%>"><i class="icoo fa-brands fa-linkedin"></i></li></a>
      <li><a href="<%=social[0].github_link%>"><i class="icoo fa-brands fa-github"></i></li></a>
    </ul>
  
  </div>
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init({
        duration: 400,
        offset: 300,
        easing: 'ease-in',
        once: false
    });
  </script>
</html>
