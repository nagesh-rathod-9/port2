<div class="container-fluid mt-5 p-5" style="border: 1px solid black;">
<form action="save_service" method="post">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-dark">Add Service</h3>
        </div>
        <div class="col-md-8">
            <input type="text" class="form-control" name="service" required>
        </div>
        <div class="col-md-4">
            <button class="btn btn-dark w-100">
                Save Service
            </button>
        </div>
    </div>
</form>

