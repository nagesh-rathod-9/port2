    <div class="row">
        
        <div class="col-md-12 mt-2">
            <table class="table table-hover table-sm">
                <tr >
                    <th>Sn</th>
                    <th>Service Name</th>
                    <th>Action</th>

                </tr>
                <%for(var i=0;i<service_list.length;i++){%>
                    <tr>
                       
                        <td><%=i+1%></td>
                        <td><%=service_list[i].service%></td>
                        <td >
                            <a class="btn btn-dark ms-5" href="edit/<%=service_list[i].service_id%>"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-dark" href="delete/<%=service_list[i].service_id%>"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                <%}%>
            </table>

        </div>
    </div>
</div>
</div>

